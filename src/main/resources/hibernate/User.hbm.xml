<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.mkyong.user.model.User" table="user" catalog="my_doctor">
        <id name="userId" type="java.lang.Long">
            <column name="USER_ID" />
            <generator class="identity" />
        </id>
        <property name="displayName" type="string">
            <column name="DISPLAY_NAME" length="10" not-null="true" unique="true" />
        </property>
        <property name="username" type="string">
            <column name="USERNAME" length="10" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="20" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
