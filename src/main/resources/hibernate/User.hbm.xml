<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.mkyong.model.User" table="user" catalog="my_doctor">
        <id name="userId" column="USER_ID" type="java.lang.Long">
            <generator class="identity" />
        </id>
        <property name="displayName" column="DISPLAY_NAME" type="text"/>
        <property name="username" column="USERNAME" type="text"/>
        <property name="password" column="PASSWORD" type="text"/>
    </class>
</hibernate-mapping>
